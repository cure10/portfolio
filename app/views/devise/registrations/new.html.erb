  <div class="container">
    <div class="row">
      <div class="col-md-6 mx-auto mt-5">
        <h1>新規登録</h1>
        <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :ニックネーム,class: "mr-3 mt-5"%>
            <%= f.text_field :name, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :郵便番号,class: "mr-5" %>
            <%= f.text_field :postal_code, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :都道府県,class: "mr-5" %>
            <%= f.text_field :prefectures, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :市町村,class: "mr-5 mt-2" %>
            <%= f.text_field :address, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :建物名,class: "mr-5 mt-2" %>
            <%= f.text_field :address_building, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :メール,class: "mr-5 mt-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field">
            <%= f.label :パスワード,class: "mr-4 mt-2" %>
            <%= f.password_field :password, autocomplete: "new-password" %><br />
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上！)</em>
            <% end %>
          </div>
          <div class="field">
            <%= f.label :パスワード確認用,class: "mr-1 mt-2" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <div class="actions mt-5">
            <span class="mr-3"><%= f.submit "Sign up " %></span>
            <span><%= link_to "登録済みの方はこちら",new_user_session_path %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
