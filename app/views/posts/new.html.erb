<h1 class="mt-3">New book</h1>
  <%= form_with model: @post, url:'/posts', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Image</h4>
  <%= f.attachment_field :title_image %>
  <h4>Opinion</h4>
  <%= f.text_area :title_comment %>
  <%= f.submit 'Create Book', class: "btn btn-primary" %>
  <% end %>
  </div>