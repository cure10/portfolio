<div class="container mt-5">
  <h2>投稿詳細</h2>
  <div class="row">
    <div class="col-md-4 mt-3">
      <h5>投稿へのコメント</h5>
      <div>
        <%= form_with model: [@post, @post_comment], remote: true  do |f| %>
        <%= f.text_area :comment %>
        <br><%= f.submit "送信する" %></br>
        <% end %>
      </div>
      <h5 class="mt-3">コメント一覧</h5>
      <div class="comment-index">
        <%= render 'post_comments/comment-index', post: @post  %>
      </div>
    </div>
    <div class="col-md-2 text-right">
      <p><%= link_to (attachment_image_tag @post.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"),user_path(@user) %></p>
      <p>ユーザー名：<%= link_to @post.user.name,user_path(@user) %></p>
      <% if current_user.id == @post.user_id %>
        <p><%= button_to "編集をする", {controller: 'posts', action: 'edit'}, {method: :get, class: "mybutton btn btn-info"} %></p>
        <p><%= button_to "投稿を削除する", {controller: 'posts', action: 'destroy'}, {method: :delete,  "data-confirm" => "本当に削除しますか？",class: "mybutton btn btn-danger"} %></p>
      <% end %>
    </div>
    <div class="col-md-6 text-center">
        <p><%= link_to @post.title,post_path(@post) %></p>
        <p><%= attachment_image_tag @post, :title_image, :fill, 500, 500, fallback: "no_image.jpg" %></p>
        <div>コメント件数：<%= @post.post_comments.count %></div>
        <div class="favorite-btn_<%= @post.id %>">いいね数：<%= render 'favorites/favorite-btn', post: @post %></div>
        <p class="mt-3">本文：</p>
        <h7><p><%= @post.title_comment %></p></h7>
    </div>
  </div>
</div>
