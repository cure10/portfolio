  <div class="container mt-5">
    <%= render 'users/search' %>
    <div class="row">
      <div class="col-md-12">
        <% if @post.errors.any? %>
          <%= @post.errors.count %>errors
          <% @post.errors.full_messages.each do |message| %>
          <%= message %>
          <% end %>
        <% end %>
        <h2>投稿一覧</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>タイトル</th>
              <th>本文</th>
              <th>その他</th>
            </tr>
          </thead>
          <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to (attachment_image_tag post.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"),user_path(post.user) %></td>
              <td><%= link_to post.title, post_path(post) %></td>
              <td><%= post.title_comment %></td>
              <td>
              <p class="favorite-btn_<%= post.id %>">いいね件数：<%= render 'favorites/favorite-btn', post: post %></p>
              <p>コメント件数：<%= post.post_comments.count %></p>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>