  <%= render 'users/profile', user: @user %>
      <div class="col-md-8 offset-md-1">
        <% if @range == "User" %>
        <div>ユーザー　<%= @word %>の検索結果</div>
          <table class="table">
            <thead>
              <tr>
                <th>Image</th>
                <th>Name</th>
              </tr>
            </thead>
            <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></td>
                <td><%= user.name %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        <% else %>
        <div>投稿　<%= @word %>の検索結果</div>
          <table class="table">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
            </thead>
            <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td></td>
                <td><%= link_to post.title,post_path(post) %></td>
                <td><%= post.title_comment %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>
  </div>

