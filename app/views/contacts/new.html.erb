<div class="container">
  <h2>お問い合わせ</h2>
  <div class="row d-flex align-items-center justify-content-center">
    <div class="col-md-12">
      <%= form_with model: @contact, url: confirm_path, local:true do |f| %>
        <div class="form-group">
          <%= f.label :name, 'ニックネーム' %>
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, '返信先gmail' %>
          <%= f.text_field :email, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :phone_number, '電話番号' %>
          <%= f.text_field :phone_number, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :message, 'お問い合わせ内容' %>
          <%= f.text_area :message, size: '10x10', class: 'form-control' %>
        </div>
        <div>
          <%= f.submit '入力内容確認' %>
        </div>
      <% end %>
    </div>
  </div>
</div>