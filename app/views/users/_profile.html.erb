<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
        <tr>
          <td>name</td>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <td>introduction</td>
          <td><%= user.introduction %></td>
        </tr>
        <tr>
          <td>follows</td>
          <td><%= link_to user.followings.count,user_followings_path(user) %></td>
        </tr>
        <tr>
          <td>followers</td>
          <td><%= link_to user.followers.count,user_followers_path(user) %></td>
        </tr>
      </tbody>
      </table>
      <% if user != current_user %>
        <% if current_user.following?(user) %>
        <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %>
        <% else %>
        <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
        <% end %>
      <% end %>
      <div>
        <%= link_to '',edit_user_path(user), class: "col-sm-12 btn btn-outline-secondary btn-block fas fa-user-cog  edit_user_#{user.id}" %>
      </div>
      <div>
        <%= link_to '',new_post_path(user), class: "col-sm-12 btn btn-outline-secondary btn-block" %>
      </div>
    </div>
