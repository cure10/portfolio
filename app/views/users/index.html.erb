  <div class="container mt-5">
    <div class="row">
      <div class="col-md-2 mt-5">
        <%= render 'users/search' %>
      </div>
      <div class="col-md-10">
        <table class="table table-hover table-inverse">
          <h1 class="mt-4">ユーザー一覧</h1>
          <thead>
            <tr>
              <th>プロフィール</th>
              <th>ニックネーム</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td>フォロー数: <%= user.followings.count %></td>
            <td>フォロワー数: <%= user.followers.count %></td>
            <% if user != current_user %>
              <% if current_user.following?(user) %>
              <td>
              <%= link_to "フォロー外す", user_relationship_path(user.id, :id), method: :delete %>
              </td>
              <% else %>
              <td>
              <%= link_to "フォローする", user_relationships_path(user.id, :id), method: :post %>
              </td>
              <% end %>
            <% else %>
              <td></td>
            <% end %>
            <td><%= link_to '詳細',user_path(user.id) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @users %>
      </div>
    </div>
  </div>


