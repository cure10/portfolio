<%= render 'users/profile', user: @user %>

   <div class="col-md-8 offset-md-1">
      <table class="table">
        <h1>Users</h1>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></td>
          <td><%= user.name %></td>
          <td>フォロー数: <%= user.followings.count %></td>
          <td>フォロワー数: <%= user.followers.count %></td>

          <% if user != current_user %>
            <% if current_user.following?(user) %>
            <td>
            <%= link_to "フォロー外す", user_relationship_path(user.id, :id), method: :delete %>
            </td>
            <% else %>
            <td>
            <%= link_to "フォローする", user_relationships_path(user.id, :id), method: :post %>
            </td>
            <% end %>
          <% else %>
            <td></td>
          <% end %>

          <td><%= link_to 'Show',user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


