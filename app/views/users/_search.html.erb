<div class="search_form">
  <%= form_with url: search_path, local: true, method: :get do |f| %>
    <p><%= f.text_field :word %></p>
    <p><%= f.select :range, options_for_select([['ユーザー'], ['投稿']]) %></p>
    <p><%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backword_match"], ["部分一致","partial_match"]]) %></p>
    <p><%= f.submit "検索", class: "btn btn-primary" %></p>
  <% end %>
</div>