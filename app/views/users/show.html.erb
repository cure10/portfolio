  <div class="container">
    <h2 class="mt-3 mb-3">マイページ</h2>
    <div class="row">
      <div class="col-md-5">
        <div class="row">
          <div class="col-md-6">
            <h5 class="mb-2">ユーザー詳細</h5>
            <span><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></span>
          </div>
          <div class="col-md-6">
            <p>ユーザー名：<%= @user.name %></p>
            <p><%= @user.introduction %></p>
            <div class="btn-toolbar">
              <div class="btn-group">
                <% if @user != current_user %>
                  <% if current_user.following?(@user) %>
                    <div class="mr-2"><%= button_to "フォロー外す", user_relationships_path(@user.id), method: :delete %></div>
                  <% else %>
                    <div><%= button_to "フォローする", user_relationships_path(@user.id), method: :post %></div>
                  <% end %>
                <% end %>
                <div><%= button_to "編集する", edit_user_path(@user.id), method: :get, class: "mybutton btn btn-info" %></div>
              </div>
            </div>
            <div class="btn-toolbar mt-2">
              <div class="btn-group">
                <div class="mr-2"><%= button_to "カレンダー", user_events_path(@user.id), method: :get, class: "mybutton btn bg-warning" %></div>
                <div><%= button_to "通知一覧", user_notifications_path(@user.id), method: :get,class: "mybutton btn bg-light" %></div>
              </div>
            </div>
          </div>
        </div>
        <div class="mt-3 table table-hover table-inverse">
          <h5>フォロー一覧</h5>
          <% if @usersfollowed.exists? %>
            <table>
              <tbody>
                <% @usersfollowed.each do |user| %>
                  <tr>
                    <td><%= user.name %></td>
                    <td>フォロワー数: <%= user.followers.count %></td>
                    <td><%= button_to "詳細ページ",user_path(user), method: :get, class: "mybutton btn btn-primary" %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <p>ユーザーはいません</p>
          <% end %>
          <%= paginate @usersfollowed %>
        </div>
        <div class="mt-3 table table-hover table-inverse">
          <h5>フォロワー一覧</h5>
          <% if @usersfollowerss.exists? %>
          <table>
            <tbody>
              <% @usersfollowerss.each do |user| %>
                <tr>
                  <td><%= user.name %></td>
                  <td>フォロー数: <%= user.followings.count %></td>
                  <td><%= link_to "詳細ページ",user_path(user), method: :get, class: "mybutton btn btn-primary" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <% else %>
            <p>ユーザーはいません</p>
          <% end %>
          <%= paginate @usersfollowerss %>
        </div>
      </div>
      <div class="col-md-7">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>タイトル</th>
              <th>本文</th>
              <th>その他</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
            <tr>
              <td><%= link_to post.title,post_path(post) %></td>
              <td><%= post.title_comment %></td>
              <td>
                <div class="favorite-btn_<%= post.id %>">いいね件数：<%= render 'favorites/favorite-btn', post: post %></div>
                <div>コメント件数：<%= post.post_comments.count %></div>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @posts %>
      </div>
    </div>
  </div>
