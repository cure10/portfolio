  <div class="row ml-5 mt-3">
  <h1>栽培予定カレンダー</h1>
  </div>
  <br>
  <div class="row">
    <div class="col-md-4">
      <%= form_with model: @event, url: user_events_path, local:true do |f| %>
        <div class="title text-center">
          <div class="form-tag">タイトル</div>
          <%= f.text_field :title %>
        </div>
        <div class="content text-center">
          <div class="form-tag">内容</div>
          <%= f.text_area :body,class: "event-index-text-area" %>
        </div>
        <div class="time text-center">
          <div class="form-tag">作業開始時間</div>
          <%= f.datetime_select :start_time %>
        </div>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <div class="submit text-center mt-2">
          <%= f.submit "栽培予定作成" %>
        </div>
      <% end %>
    </div>
    <br>
    <br>
    <div class="col-md-8">
      <h2 class="bg-primary mb-3"><%= notice %></h2>
      <%= month_calendar events: @events do |date, events| %>
        <%= date.day %>
        <% events.each do |event| %>
          <div>
            <%= link_to event.title.truncate(6), edit_user_event_path(event.user.id,event.id) %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
